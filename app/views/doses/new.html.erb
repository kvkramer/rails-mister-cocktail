<h1>📝 Create a new ingredient for your <%= @cocktail.name %> </h1>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
<div class="form-inputs">
    <%= f.input :description %>
    <%= f.association :ingredient %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  <% end %>
