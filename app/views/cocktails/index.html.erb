<h1>🥃 All our lovely Cocktails: 🍹</h1>

<div class="cards">
  <% @cocktails.each do |cocktail| %>

    <% if cocktail.photo.attached? %>
      <div class="card-cocktail" style="background-image: url('<%= cl_image_path cocktail.photo.key, width: 300, height: 200, crop: :fill %>')">
    <% else %>
      <div class="card-cocktail" style="background-image: url('<%= cl_image_path "fra0v2b29elip4whik0i", width: 300, height: 200, crop: :fill %>')">
    <% end %>
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  <% end %>
</div>



<p><%= link_to "Add a new Cocktail",  new_cocktail_path %></p>

