<h2>🍸 <%= @cocktail.name %></h2>

<h5>🧂Ingredients: </h5>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %>
    <%= dose.ingredient.name %>
      <%= link_to "🗑 - Delete this ingredient", dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
    <% end %>

</ul>
<p><%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail)  %></p>
<p><%= link_to "< Back", cocktails_path %></p>
